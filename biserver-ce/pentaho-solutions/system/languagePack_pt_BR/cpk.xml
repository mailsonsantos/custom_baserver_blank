<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<cpk>
    <elementTypes defaultElement="main">
        <elementType class="pt.webdetails.cpk.elements.impl.DashboardElement" name="Dashboard">
            <elementLocations>
                <elementLocation adminOnly="true" isRecursive="true" path="dashboards/admin" pattern=".*\.wcdf"/>
                <elementLocation adminOnly="false" isRecursive="true" path="dashboards/" pattern=".*\.wcdf"/>
            </elementLocations>
        </elementType>
        <elementType class="pt.webdetails.cpk.elements.impl.KettleJobElement" name="Kettle">
            <elementLocations>
                <elementLocation adminOnly="true" isRecursive="true" path="endpoints/kettle/admin" pattern=".*\.kjb"/>
                <elementLocation adminOnly="false" isRecursive="true" path="endpoints/kettle/" pattern=".*\.kjb"/>
            </elementLocations>
        </elementType>
        <elementType class="pt.webdetails.cpk.elements.impl.KettleTransformationElement" name="Kettle">
            <elementLocations>
                <elementLocation adminOnly="true" isRecursive="true" path="endpoints/kettle/admin" pattern=".*\.ktr"/>
                <elementLocation adminOnly="false" isRecursive="true" path="endpoints/kettle/" pattern=".*\.ktr"/>
            </elementLocations>
        </elementType>
    </elementTypes> 
    <info>
        <CPK_version>5</CPK_version>
        <description>This plugin installs language definitions for the Portuguese language (Brazilian variant) in Pentaho 5</description>
        <name>Portuguese (Brazilian variant) Language Pack Installer</name>
        <author_email>community@pentaho.com</author_email>
        <company_name>Webdetails</company_name>
        <company_url>http://redmine.webdetails.org/projects/lpi/</company_url>
        <creation_date>2013-11-05</creation_date>
        <version>1.0</version>
    </info>
</cpk>
